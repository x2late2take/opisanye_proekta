@startuml
start
:инициализация_игры;
:установка_начального_направления_змейки;
:генерация_начального_фрукта;
while (игра_продолжается?) is (да)
  :получение_ввода_от_пользователя;
  if (нажата_клавиша?) then (да)
    :обновить_направление_змейки;
  else (нет)
    :змейка_двигается_на_один_сегмент;
  endif
  :переместить_змейку;
  if (змейка_достигла_фрукта?) then (да)
    :увеличить_размер_змейки;
    :сгенерировать_новый_фрукт;
  endif
  if (змейка_врезалась_в_стену?) then (да)
    :завершить_игру;
    stop
  endif
  if (змейка_врезалась_в_саму_себя?) then (да)
    :завершить_игру;
    stop
  endif
endwhile (нет)
:вывод_результатов;
stop
@enduml
