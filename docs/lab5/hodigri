
@startuml
start
:инициализация_игры;
:установка_начального_направления_змейки;
:генерация_начального_фрукта;
:установка_счётчика_очков_на_0;
while (игра_активна?) is (да)
  :получение_ввода_от_пользователя;
  if (нажата_клавиша?) then (да)
    :обновить_направление_змейки_и_перенести_вперёд_по_этому_направлению;
  else (нет)
    :змейка_двигается_на_один_сегмент_вперёд;
  endif
  if (змейка_достигла_фрукта?) then (да)
    :увеличить_размер_змейки;
    :увеличить_счётчик_очков;
    :сгенерировать_новый_фрукт;
  endif
  if (змейка_врезалась_в_стену?) then (да)
    :завершить_игру;
    :вывести_счёт_и_сообщение_о_поражении;
    stop
  endif
  if (змейка_врезалась_в_саму_себя?) then (да)
    :завершить_игру;
    :вывести_счёт_и_сообщение_о_поражении;
    stop
  endif
  if (счёт_достиг_максимума?) then (да)
    :завершить_игру;
    :вывести_счёт_и_сообщение_о_победе;
    stop
  endif
endwhile (нет)
:вывод_результатов;
stop
@enduml
