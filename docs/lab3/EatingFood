@startuml

start
:Инициализация_игры;
:Создание_начальной_змейки;
:Генерация_еды_не_на_змейке;
:Установка_счёта_в_ноль;

while (Игра_не_закончена) is (Нет)
  :Получение_ввода_направления_змейки;
  if (Змейка_не_столкнулась_с_препятствием?) then (Да)
    :Перемещение_змейки_по_заданному_направлению_на_один_сегмент;
    if (Змейка_на_еде?) then (Да)
      :Съедение_еды;
      :Увеличение_счёта_на_одно_очко;
      :Увеличение_размера_змейки;
      :Генерация_новой_еды_не_в_змейке;
      if (Счёт_достиг_цели?) then (Да)
        :Игра_заканчивается_победой;

        stop
      else (Нет)
      endif
    else (Нет)
    endif
  else (Нет)
    :Игра_заканчивается_поражением;
    stop
  endif
endwhile
@enduml