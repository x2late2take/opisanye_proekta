@startuml
start
:Инициализация_игры;
:Генерация_яблока_не_в_змейке;

while (Игра_активна?) is (да)
  :Получение_ввода_от_пользователя;
  if (Есть_ввод?) then (да)
    :Перемещение_змейки;
    if (Змейка_на_яблоке?) then (да)
      :Съедение_яблока;
      :Увеличение_размера_змейки;
      :Генерация_нового_яблока_не_в_змейке;
    endif
    if (Змейка_врезалась_в_себя?) then (да)
      :Конец_игры;
      stop
    endif
    if (Змейка_врезалась_в_границу?) then (да)
      :Конец_игры;
      stop
    endif
  else (нет)
    :Ожидание_следующего_хода;
  endif
endwhile

:Конец_игры;
stop
@enduml
