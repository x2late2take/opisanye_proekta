@startuml
title Диаграмма активности для игры "Змейка"

start
partition Инициализация {
  :Инициализация_игры;
  :Задать_начальное_направление_змейки;
  :Создать_начальную_еду;
}
partition Игровой_цикл {
  :Начать_цикл_игры;
  while (Игра_не_закончена) is (Нет)
    if (Змейка_врезалась?) then (Да)
      -Игра_заканчивается_поражением
-Вывод_таблицы_счёта
stop
    elseif (Набрано_достаточно_очков?) then (Да)
      -Игра_заканчивается_победой
-Вывод_таблицы_счёта
stop
    else (Нет)

      :Продолжить_игру;
      :Следующий_ход;
    endif
  endwhile
}
:Пользователь_принудительно_закроет_приложение;
stop
@enduml