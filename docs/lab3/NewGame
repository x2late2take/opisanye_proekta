@startuml
start
:Инициализация_игры;
:Создание_игрового_поля;
:Размещение_змейки_на_поле;
:Генерация_фрукта;

while (Игра_не_завершена?) is (Да)
  :Получение_ввода_от_пользователя;
  if (Есть_ввод?) then (Да)
    :Перемещение_змейки;
    if (Змейка_на_фрукте?) then (Да)
      :Змейка_съедает_фрукт;
      :Увеличение_размера_змейки;
      :Генерация_нового_фрукта;
    endif
    if (Змейка_врезалась_в_себя?) then (Да)
      :Конец_игры;
      stop
    endif
    if (Змейка_врезалась_в_границу?) then (Да)
      :Конец_игры;
      stop
    endif
    if (Змейка_врезалась_в_препятствие?) then (Да)
      :Конец_игры;
      stop
    endif
  else (Нет)
    :Ожидание_следующего_хода;
  endif
endwhile

:Конец_игры;
stop
@enduml
