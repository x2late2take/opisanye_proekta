@startuml
start
:Инициализация_управления;

repeat :Получение_ввода_от_пользователя;  
:Определение_направления;
    :Перемещение_змейки;
split

    if (Змейка_на_фрукте?) then (да)
      :Съедение_фрукта;
      :Увеличение_размера_змейки_на_один сегмент;
      :Генерация_нового_фрукта;
    endif

split again
  if (Змейка_врезалась_в_препятствие(сама в себя или в границы поля)?) then (да)
    :Конец_игры;
    stop
  else (нет)
  endif
end split


@enduml

