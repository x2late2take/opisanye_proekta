@startuml
start
:Инициализация_управления;

repeat :Получение_ввода_от_пользователя;
split
  :Определение_направления;
  if (Змейка_может_двигаться?) then (да)
    :Перемещение_змейки;
    if (Змейка_на_фрукте?) then (да)
      :Съедение_фрукта;
      :Увеличение_размера_змейки;
      :Генерация_нового_фрукта;
    endif
  else (нет)
    :Конец_игры;
    stop
  endif
split again
  if (Змейка_врезалась_в_себя?) then (да)
    :Конец_игры;
    stop
  else (нет)
  endif
split again
  if (Змейка_врезалась_в_границу?) then (да)
    :Конец_игры;
    stop
  else (нет)
  endif
split again
  if (Змейка_врезалась_в_препятствие?) then (да)
    :Конец_игры;
    stop
  else (нет)
  endif
end split

repeat while (Игра_продолжается?)
:Конец_игры;
stop
@enduml
